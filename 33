class Solution {
public:
    int search(vector<int>& nums, int target) {
        int left = 0;
        int right = nums.size() - 1;
        while(left <= right) {
            int mid = left + (right - left)/2;
            if(nums[0] <= nums[mid]) {
                if(nums[mid] == target) {
                    return mid;
                }
                else if(target <= nums[mid] && target >= nums[0]) {
                    right = mid - 1;
                } else {
                    left = mid + 1;
                }
            }
            else {
                if (nums[mid] == target) {
                    return mid;
                } 
                else if(target >= nums[mid] && target <= nums[nums.size() - 1]) {//大于等于处理好
                    
                    left = mid +1;
                } else {
                    right = mid - 1;
                }
            }
        }
        return -1;
    }
};
